/* pages/register/register.wxss */

.register {
  position: relative;
  height: 100%;
}

.main {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -390rpx;
  margin-left: -315rpx;
  height: 780rpx;
  width: 630rpx;
}

.isButton {
  position: absolute;
  left: 50%;
  margin-left: -150rpx;
  bottom: -30rpx;
}

.main .bg {
  position: absolute;
  z-index: -1;
  height: 780rpx;
  width: 630rpx;
}

.aircle {
  display: block;
  width: 248rpx;
  height: 248rpx;
  text-align: center;
  margin-top: -20rpx;
  margin: 0 auto;
}

.main_text {
  /* margin-top: 5rpx;
  text-align: center; */
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.phone, .code {
  width: 530rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.phone {
  border: 1rpx solid red;
}

.code {
  border: 1rpx solid #ccc;
}

.phone image {
  width: 33rpx;
  height: 33rpx;
  margin-left: 50rpx;
}

.code image {
  width: 27rpx;
  height: 37rpx;
  margin-left: 50rpx;
}

.phone input, .code input {
  margin-left: 30rpx;
}

.code input {
  width: 260rpx;
}

.code_text {
  color: red;
  font-size: 25rpx;
}

.isButton button {
  width: 300rpx;
  border-radius: 50rpx;
  background-color: red;
  color: #fff;
}

button::after {
  border: none;
}

.bg_img {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: -3;
}

.remark {
  width: 340rpx;
  padding-left: 30rpx;
  font-size: 25rpx;
}
