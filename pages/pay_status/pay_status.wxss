.goods-list {
  padding-left: 5rpx;
  padding-right: 5rpx;
  flex-wrap: wrap;
  padding-top: 10rpx;
  margin-left: -5rpx;
  margin-right: -5rpx;
}

.goods-list.goods-list-cols-3 .flex-grow-0 {
  width: 33.333333%;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.goods-list .goods-item {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  background: #fff;
